{% extends 'base.html.twig' %}

{% block body %}
    {% if isOk %}
        <h2>L'article a bien été modifier</h2>
    {% else %}
    <h2 style="text-align: center">Modifier un article</h2>
        {{ form_start(articleForm) }}
        {{ form_row(articleForm.titreArticle, {
            'label': "Titre de l'article",
            'attr': {
                class: "form-control"
            }
        }) }}
        {{ form_row(articleForm.contenuArticle, {
            'label': "Contenu de l'article",
            'attr': {
                class: "form-control"
            }
        }) }}
        {{ form_rest(articleForm) }}
        <br>
        <button type="submit" class="btn btn-secondary">Modifier l'article</button>
        {{ form_end(articleForm) }}
    {% endif %}
{% endblock %}