{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container dark-modal">

        <form action="{{ path('login') }}" method="post" class="px-4 py-3">

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

            <div class="form-group">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" value="{{ last_username }}" class="form-control" name="_username" id="inputEmail" placeholder="email@example.com" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" class="form-control" name="_password" id="inputPassword" placeholder="Password" required>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="form-check checkbox mb3">
                <input type="checkbox" class="form-check-input" name="_remember_me" id="checkboxRememberMe">
                <label class="form-check-label" for="checkboxRememberMe">
                    Remember me
                </label>
            </div>
            <button type="submit" class="btn btn-lg btn-primary">Sign in</button>
        </form>
        <div class="row justify-content-md-center">
            <button class="btn btn-primary" style="margin-right:2rem">New around here? Sign up</button>
            &nbsp;
            <button class="btn btn-outline-info">Forgot password?</button>
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>
{% endblock %}
