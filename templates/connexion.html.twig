{% extends 'base.html.twig' %}

{% block body %}

    <form class="form-horizontal form text-center" action='' method="POST">
        <fieldset>
            <div id="legend">
                <legend class="mb-2">Connectez-vous</legend>
            </div>
            <div class="control-group">
                <!-- Username -->
                <label class="control-label"  for="username">Username</label>
                <div class="controls">
                    <input type="text" id="username" name="username" placeholder="" class="input-xlarge pl-2 mb-2" autocomplete="off">
                </div>
            </div>

            <div class="control-group">
                <!-- Password-->
                <label class="control-label" for="password">Password</label>
                <div class="controls">
                    <input type="password" id="password" name="password" placeholder="" class="input-xlarge pl-2 mb-2" autocomplete="off">
                </div>
            </div>

            <div class="control-group mt-5">
                <!-- Button -->
                <div class="controls">
                    <button class="btn btn-success">Connexion</button>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock %}