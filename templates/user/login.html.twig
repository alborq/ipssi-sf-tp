{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        {% if error %}
            <div>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        {{ form_start(userForm) }}
        {{ form_row(userForm.email, {'full_name' : '_username'}) }}
        {{ form_row(userForm.password, {'full_name' : '_password'}) }}
        <br>
        <button class="btn btn-primary" type="submit">Connecte !</button>
        {{ form_end(userForm) }}
    </div>

{% endblock %}
